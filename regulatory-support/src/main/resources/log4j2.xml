<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Properties>
    <Property name="logFilePath">C:\\error.log</Property>
  </Properties>
  <Appenders>
  <Console name="Console" target="SYSTEM_OUT">
    <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
  </Console>
  <File name="LogFile" fileName="${logFilePath}" immediateFlush="true">
    <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
  </File>
  </Appenders>
  <Loggers>
  <!-- The set of possible levels includes: trace, debug, info, warn, error, fatal -->
    <Root level="info">
      <AppenderRef ref="Console" />
      <AppenderRef ref="LogFile" level="error"/>
    </Root>
  </Loggers>
</Configuration>

